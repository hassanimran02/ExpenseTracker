<!DOCTYPE html>
<html lang="en">
@{
    var currentBudgetId = (int?)Session["CurrentBudgetId"];
    ViewBag.CurrentBudgetId = currentBudgetId;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    @RenderSection("styles", required: false)
    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .navbar {
            background-color: #ff5a5f;
        }

        .navbar-brand {
            color: #000;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #000;
            margin-right: 20px;
            transition: color 0.3s ease-in-out;
        }

            .navbar-nav .nav-link:hover {
                color: #555;
            }

        .dashboard-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .dashboard-content {
            max-width: 600px;
            width: 100%;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        }

            .dashboard-content.show {
                opacity: 1;
                transform: translateY(0);
            }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
        }

        p {
            text-align: center;
            margin-top: 10px;
        }

        a {
            color: #ff5a5f;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">Expense Tracker</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UserDashboard", "Account")">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Expense")">Manage Expenses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("YourBudgets", "Budget")">Manage Budgets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ExpensesSummary", "Reports")">Reports and Analytics</a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-link" href="@Url.Action("BudgetSummary", "Budget")">Insights</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>

</html>